{
  "name": "zenml",
  "version": "0.0.0",
  "author": "Ziphil",
  "description": "Alternative syntax for XML",
  "homepage": "https://github.com/Ziphil/Zenml",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "develop": "ts-node source/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "tsc"
  },
  "eslintConfig": {
    "extends": "ziphil",
    "rules": {
      "@typescript-eslint/quotes": "off",
      "no-throw-literal": "off"
    }
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.(ts|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "verbose": true
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/parsimmon": "^1.10.6",
    "@types/xmldom": "^0.1.31",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.0.1",
    "eslint-config-ziphil": "^1.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsdoc": "^36.1.1",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "parsimmon": "^1.18.0",
    "xmldom": "^0.6.0"
  }
}
