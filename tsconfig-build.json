{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./source",
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "esnext", "dom"],
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": true
  },
  "include": [
    "source/**/*"
  ]
}
